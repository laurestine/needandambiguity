@article{doi:10.1177/1525822X20945063,
author = {David Bimler and Mari Uusküla},
title ={Two Indices Are Better than One: Building on Robbins, Nolan, and Chen (2017)},
journal = {Field Methods},
volume = {33},
number = {1},
pages = {42-51},
year = {2021},
doi = {10.1177/1525822X20945063},

