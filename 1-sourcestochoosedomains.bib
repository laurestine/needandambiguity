keywords = {bilingualism, semantic domain of animals, semantic domain of emotions, semantic interlanguage, semantic judgment task, Emotionssemantik, semantische Beurteilungsaufgabe, semantische Interimssprache, Tiernamensemantik, Zweisprachigkeit},
